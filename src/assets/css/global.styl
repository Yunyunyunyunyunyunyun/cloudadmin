@import './common.styl'
html, body
  font-family "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif
body
  background-color #F2F2F2
img
  max-width 100%
  max-height 100%
.map img
  max-width none
  max-height none
.rel
  position relative
.abs
  position absolute
.title
  font-size 16px
  color #333
  font-weight 600

@font-face {
  font-family: 'iconfont';  /* project id 1442067 */
  src: url('//at.alicdn.com/t/font_1442067_6v85up4c1ef.eot');
  src: url('//at.alicdn.com/t/font_1442067_6v85up4c1ef.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_1442067_6v85up4c1ef.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_1442067_6v85up4c1ef.woff') format('woff'),
  url('//at.alicdn.com/t/font_1442067_6v85up4c1ef.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_1442067_6v85up4c1ef.svg#iconfont') format('svg');
}

.iconfont
  font-family "iconfont" !important
  font-style normal
  -webkit-font-smoothing antialiased
  -webkit-text-stroke-width 0.2px
  -moz-osx-font-smoothing grayscale
  font-size $font12
  font-weight 400
a.iconfont
  color #333333

>>>.ant-radio-group
  font-size $font12
>>>.ant-radio-button-wrapper:first-child
  border-radius 2px 0 0 2px
>>>.ant-radio-button-wrapper:last-child
  border-radius 0 2px 2px 0
>>>.ant-radio-button-wrapper
  color #000000
>>>.ant-radio-button-wrapper:hover
  color #1890ff
>>>.ant-radio-button-wrapper-checked
  color #1890ff
.comfirm-formitem
  margin-bottom 0
.map-search
  width 280px
  display block
  margin 0 auto
  font-size $font12
  border-radius 2px
  >>>.ant-input
    font-size $font12
    border-radius 2px
.common-btn
  font-size $font12
  border-radius 2px
.detail-form
  &.ant-form label
    font-size $font12
.card-container
  margin-bottom 16px
  background-color #fff
  padding 16px 20px 7px 20px
  .mr8
    margin-right 8px
  .mt16
    margin-top 16px
  .mt40
    margin-top 40px
  .mb40
    margin-bottom 40px
  .card-title
    font-size $font16
    font-weight 600
    color #333333
    padding-bottom 16px
    .group-radio
      font-weight 400
    .iconfont
      padding-right 2px
  .card-content
    .search-item
      padding 0 5px
    >>>.ant-tabs-nav-container
      font-size $font12
    >>>.ant-cascader-picker
      border-radius 2px
    >>>.ant-select-selection
      border-radius 2px
    >>>.ant-form label
      font-size $font12
    >>>.ant-input
      font-size $font12
      border-radius 2px
    >>>.ant-form-item
      margin-bottom 14px
      font-size $font12
    >>>.ant-select
      font-size $font12
    >>>.ant-cascader-picker
      font-size $font12
    >>>.ant-form-item-label
      line-height 32px
    >>>.ant-form-item-control
      line-height 32px
.table-content
  &.center
    >>>.ant-table-thead > tr > th, >>>.ant-table-tbody > tr > td
      padding 0
  .input-table
    width 50%
    text-align center
  >>>.ant-table-thead > tr > th, >>>.ant-table-tbody > tr > td
    padding 0 0 0 16px
    height 40px
    color #333
    font-size $font12
  >>>.ant-table-thead > tr > th
    background-color #F4F5F7
    color #000
    font-weight 600
  >>>.ant-pagination-total-text
    height 28px
    line-height 28px
  >>>.ant-pagination
    font-size $font12
    color #333
  >>>.ant-pagination-item, >>>.ant-pagination-prev, >>>.ant-pagination-next, >>>.ant-pagination-jump-prev, >>>.ant-pagination-jump-next
    min-width 28px
    height 28px
    line-height 28px
    border-radius 2px
  >>>.ant-pagination-item a
    color #333
  >>>.ant-pagination-prev .ant-pagination-item-link, >>>.ant-pagination-next .ant-pagination-item-link
    border-radius 2px
  >>>.ant-select
    font-size $font12
    color #333
  >>>.ant-select-selection--single
    height 28px
  >>>.ant-select-selection
    border-radius 2px
  >>>.ant-select-dropdown
    font-size $font12
  >>>.ant-select-selection__rendered
    line-height 28px
  >>>.ant-select-arrow
    color #333
  >>>.ant-select-dropdown-menu-item
    text-align center
    padding 3px 12px
  >>>.ant-pagination-options-quick-jumper
    height 28px
    line-height 28px
    input
      width 48px
      height 28px
      max-width 80px
      border-radius 2px
      font-size $font12
      text-align center
      padding 4px 6px
